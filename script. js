  {title:"Omni-Dimensional Metaverse", desc:"Hub simulasi pendidikan, riset, perdagangan, dan diplomasi berbasis AR/VR + AI."},
  {title:"AI Biosphere Engine", desc:"Restorasi ekosistem hutan, laut, dan tanah pertanian, menjadikan Indonesia pusat karbon dunia."},
  {title:"Neural DAO Governance", desc:"Sistem tata kelola AI + manusia + blockchain yang transparan dan bisa direplikasi global."}
];
const grid = document.getElementById('components-grid');
components.forEach(c=>{
  const card = document.createElement('div');
  card.classList.add('card');
  card.innerHTML=`<h3>${c.title}</h3><p>${c.desc}</p>`;
  grid.appendChild(card);
});

// Social Links
const socialLinksData = {
  "TikTok":"https://www.tiktok.com/@rr.corp",
  "YouTube":"https://www.youtube.com/@RRCORP.company",
  "X (Twitter)":"https://twitter.com/Companyrrcorp",
  "GitHub":"https://github.com/RRCORP-hub",
  "Instagram":"https://www.instagram.com/rr.corp.official",
  "Facebook":"https://www.facebook.com/RR.CORPHolding",
  "LinkedIn":"https://www.linkedin.com/company/rr.corp-holding",
  "Telegram":"https://t.me/rrcorpcommunity"
};
const socialContainer = document.getElementById('social-links');
for(const key in socialLinksData){
  const a = document.createElement('a');
  a.href=socialLinksData[key];
  a.target="_blank";
  a.textContent=key;
  socialContainer.appendChild(a);
  socialContainer.appendChild(document.createTextNode(" | "));
}

// Telegram CTA
document.getElementById('join-telegram').href=socialLinksData["Telegram"];
